#!/usr/bin/env sh
#########################################################
#
# jnl - Journaling for terminal people (pun intended.)
#
# Usage: jnl This is a short journal entry
# License: MIT
# By: eFrane
# "Homepage": https://github.com/eFrane/jnl
#
#########################################################

if [ -z ${JNL_HOME+x} ];
then
    JNL_HOME=~/.jnl
fi

JNL_DIR=$JNL_HOME/$(date +"%Y")

mkdir -p $JNL_DIR
echo $@ | ts "%H:%M" > $JNL_DIR/$(date +"%b-%d").txt

